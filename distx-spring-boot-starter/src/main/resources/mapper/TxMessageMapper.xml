<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.dreamroute.distx.starter.mapper.producer.TxMessageMapper">

	<insert id="insert" parameterType="com.github.dreamroute.distx.starter.domain.TxMessage">
		insert into tx_message(`topic`, `tag`, `body`, `create_time`) values(#{topic}, #{tag}, #{body}, #{createTime})
	</insert>

    <select id="selectByPrimaryKey" parameterType="long" resultType="com.github.dreamroute.distx.starter.domain.TxMessage">
		select * from tx_message where id = #{id}
	</select>
    <select id="selectTxMessageByPage" resultType="com.github.dreamroute.distx.starter.domain.TxMessage">
		select * from tx_message where faild_times &lt; #{faildTimes} limit #{start}, #{limit}
	</select>

    <delete id="deleteByPrimaryKey" parameterType="long">
		delete from tx_message where id = #{id} limit 1
	</delete>

	<update id="addFaildTimes" parameterType="long">
		update tx_message set faild_times = faild_times + 1 where id = #{id}
	</update>
</mapper>
